                    android:background="@color/light"
                    />
                <TextView
                    android:id="@+id/team_2_bull"
                    android:layout_width="fill_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="30sp"
                    android:layout_gravity="center"
