<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/light">


    <RelativeLayout
        android:id="@+id/player_name_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15sp">

        <EditText
            android:id="@+id/player_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>

        <EditText
            android:id="@+id/player_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_1"/>

        <EditText
            android:id="@+id/player_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_2"/>

        <EditText
            android:id="@+id/player_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_3"/>



    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the players' names"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_above="@id/player_name_wrapper"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's play!"
        android:layout_below="@id/player_name_wrapper"
        android:layout_centerHorizontal="true"
        android:alpha="0.75"
        android:onClick="onPlayGame"/>

</RelativeLayout>
